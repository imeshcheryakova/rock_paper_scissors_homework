<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css">
</head>
<body>

<div class="container">
  <hr>

  <div class="row">
    <div class="col-md-4">
      <a href="/play/rock" class="btn btn-warning btn-block btn-lg">Play rock.</a>
    </div>

    <div class="col-md-4">
      <a href="/play/paper" class="btn btn-warning btn-block btn-lg">Play paper.</a>
    </div>

    <div class="col-md-4">
      <a href="/play/scissors" class="btn btn-warning btn-block btn-lg">Play scissors.</a>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title text-center">You played <%=@user_move %>.</h3>
            </div>
            <div class="panel-body">
              <img src="/assets/images/<%=@user_move %>.png" class="img-responsive">
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title text-center">The computer played <%=@computer_move %>.</h3>
            </div>
            <div class="panel-body">
              <img src="/assets/images/<%=@computer_move %>.png" class="img-responsive">
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="well">
            <h1 class="text-center">You <%=@outcome %>!</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h5 class="panel-title">Summary</h5>
        </div>

        <table class="table table-hover table-striped">
          <tr>
            <th>When you played</th>
            <th>you won</th>
            <th>you lost</th>
            <th>you tied</th>
          </tr>

          <tr>
            <td>rock</td>
            <td> <%=@rock_user_wins %></td>
            <td><%=@rock_computer_wins %></td>
            <td><%=@rock_tied %></td>
          </tr>

          <tr>
            <td>paper</td>
            <td> <%=@paper_user_wins %></td>
            <td><%=@paper_computer_wins %></td>
            <td><%=@paper_tied %></td>
          </tr>

          <tr>
            <td>scissors</td>
            <td> <%=@scissors_user_wins %></td>
            <td><%=@scissors_computer_wins %></td>
            <td><%=@scissors_tied %></td>
          </tr>

          <tr>
            <th>Total</th>
            <th><%=@total_user_wins %></th>
            <th><%=@total_computer_wins %></th>
            <th><%=@total_tied %></th>
          </tr>
        </table>
      </div>


      <div class="panel panel-info">
        <div class="panel-heading">
          <h5 class="panel-title">
            Complete history
            <%=@complete_history %>
          </h5>
        </div>

        <table class="table table-hover table-striped">
          <tr>
            <th>User Move</th>
            <th>Computer Move</th>
            <th>User Wins</th>
            <th>Computer Wins</th>
            <th>Tie</th>
          </tr>

          <% @all_moves.each do |play| %>

          <tr>
            <td><%=play.user_move %></td>
            <td><%=play.computer_move %></td>
            <td><%=play.user_wins %></td>
            <td><%=play.computer_wins %></td>
            <td><%=play.tie %></td>
          </tr>

              <% end %>

        </table>
      </div>
    </div>
  </div>

</div>

</body>
</html>
